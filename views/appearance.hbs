<section class="appearance" data-id="{{ item.id }}">
    <figure class="appearance-photo">

        <img src="{{ item.image.url }}"> {{#each item.product_occurrences}}
        <div class="product-indicator" style="top: {{position.y}}%; left: {{position.x}}%;" data-uuid="{{product.id}}"></div>
        {{/each}}

        <figcaption>
            <h2><img class="avatar" src="{{ item.subject.avatar.url }}"> {{ item.subject.name }}</h2>
            <h1>{{ item.title }}</h1>
        </figcaption>
    </figure>

    <article class="appearance-products">
        <h1>Products</h1>
        <div class="appearance-products-inner">
            {{#each products}}
                <section class="product" data-uuid="{{id}}">
                    
                    <article class="actual">
                        <div class="image">
                            <h2>Actual</h2>
                            <img src="{{image.url}}">
                        </div>
                        <div class="info">
                            <h1>{{ name }}</h1>
                            <h2>{{ brand.name }}</h2>
                        </div>
                    </article>
                    
                    {{#each similars}}
                        <article class="similar">
                            <div class="image">
                                <h1>{{ similar_type }}</h1>
                                <img src="{{image.url}}">
                            </div>
                            <div class="info">
                                <h1>{{ name }}</h1>
                                <h2>{{ brand.name }}</h2>
                            </div>
                        </article>
                    {{/each}}

                </section>
            {{/each}}
        </div>
    </article>
    
</section>